    {
      "parameters": {
        "jsCode": "// Format budget alerts into urgent message\nconst alerts = $input.all();\nlet message = 'üö® **BUDGET ALERTS** üö®\\n\\n';\n\n// Group by severity\nconst critical = alerts.filter(a => a.json.alert_severity === 'CRITICAL');\nconst high = alerts.filter(a => a.json.alert_severity === 'HIGH');\n\nif (critical.length > 0) {\n  message += '**CRITICAL ALERTS**\\n';\n  critical.forEach((alert, index) => {\n    const item = alert.json;\n    message += `${index + 1}. ${item.category_path}\\n`;\n    message += `   Status: ${item.utilization_pct}% used (${item.actual_amount} PLN)\\n`;\n    message += `   Action: ${item.recommended_action}\\n\\n`;\n  });\n}\n\nif (high.length > 0) {\n  if (critical.length > 0) message += '\\n';\n  message += '**HIGH PRIORITY ALERTS**\\n';\n  high.forEach((alert, index) => {\n    const item = alert.json;\n    message += `${index + 1}. ${item.category_path}\\n`;\n    message += `   Status: ${item.utilization_pct}% used (${item.actual_amount} PLN)\\n`;\n    message += `   Action: ${item.recommended_action}\\n\\n`;\n  });\n}\n\nmessage += `\\n‚è∞ *${new Date().toLocaleString('pl-PL')}*\\n`;\nmessage += `üìä Total active alerts: ${alerts.length}`;\n\nreturn [{ json: { message } }];"
      },
      "id": "4",
